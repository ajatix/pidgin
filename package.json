{
  "name": "fettuccine",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/node": "16.7.13",
    "@types/react": "18.0.0",
    "@types/react-dom": "18.0.0",
    "grommet": "2.33.1",
    "langium": "~1.2.0",
    "langium-sprotty": "~1.2.0",
    "monaco-editor-workers": "^0.41.0",
    "monaco-editor-wrapper": "^3.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-scripts": "5.0.1",
    "reflect-metadata": "^0.1.13",
    "sprotty": "~0.13.0",
    "sprotty-elk": "~0.13.0",
    "styled-components": "5.3.11",
    "typescript": "4.4.2"
  },
  "scripts": {
    "clean": "prettier --write src/",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:langium": "langium generate",
    "build:monarch": "tsc -b tsconfig.monarch.json",
    "build:worker": "esbuild --minify ./out/language/main-browser.js --bundle --format=iife --outfile=./public/fettuccine-server-worker.js",
    "copy:monaco-editor-wrapper": "shx cp -fr ./node_modules/monaco-editor-wrapper/bundle ./public/monaco-editor-wrapper",
    "copy:monaco-workers": "shx cp -fr ./node_modules/monaco-editor-workers/dist/ ./public/monaco-editor-workers",
    "copy:monarch-syntax": "shx cp -fr ./out/syntaxes ./public/syntaxes"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "langium-cli": "~1.2.0",
    "prettier": "3.0.3",
    "shx": "^0.3.4"
  }
}